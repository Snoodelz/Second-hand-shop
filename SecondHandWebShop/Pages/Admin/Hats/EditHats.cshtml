@page
@model SecondHandWebShop.Pages.Hats.EditHatsModel
@{
}

<div class="container">
    <h3>Edit Hat</h3>
    <hr />
    <br />
    <form method="post">
        <input asp-for="Hats.Id" type="hidden" />
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Hats.Name"></label>
                <input asp-for="Hats.Name" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Hats.Description"></label>
                <input asp-for="Hats.Description" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Hats.Price"></label>
                <input asp-for="Hats.Price" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="Hats.ImageUrl"></label>
                <input asp-for="Hats.ImageUrl" cl class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Hats.Brand"></label>
                <input asp-for="Hats.Brand" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Hats.TypeOf"></label>
                <input asp-for="Hats.TypeOf" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Hats.Color"></label>
                <input asp-for="Hats.Color" class="form-control" />
            </div>
        </div>
        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-default" href="allhats">Cancel</a>
    </form>
</div>