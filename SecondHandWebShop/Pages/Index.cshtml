@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <img src="img/logo.png">

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="https://picsum.photos/900/350?g" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="https://picsum.photos/900/350?h" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="https://picsum.photos/900/350?x" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <p class="text-center">Utvalda produkter</p>
            <div class="row">
                @for (int i = 0; i < 3; i++)
                {
                    if (Model.Hats.Count > i)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="#"><img class="card-img-top" src="@Model.Hats[i].ImageUrl" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="#">@Model.Hats[i].Name</a>
                                    </h4>
                                    <h5>@Model.Hats[i].Price kr</h5>
                                    <p class="card-text">@Model.Hats[i].Description</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@Model.Hats[i].Brand</small>
                                </div>
                            </div>
                        </div>
                    }
                }
                @for (int i = 0; i < 3; i++)
                {
                    if (Model.Jackets.Count > i)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="#"><img class="card-img-top" src="@Model.Jackets[i].ImageUrl" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="#">@Model.Jackets[i].Name</a>
                                    </h4>
                                    <h5>@Model.Jackets[i].Price kr</h5>
                                    <p class="card-text">@Model.Jackets[i].Description</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@Model.Jackets[i].Brand</small>
                                </div>
                            </div>
                        </div>
                    }
                }
      


            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->